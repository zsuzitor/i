{
    //настройки компиляции можно тоже засунуть в конфиг
    "compileOnSave": true,//ide генерит js при каждом сейве файлов
    "compilerOptions": {
        "target": "es5",//стандарт js
        "removeComments": true,//удаляет комменты
        "outDir": "js",//каталог для скомпилированных файлов
        "sourceMap": true,//сгенерировать карту для сопоставления исходных и скомпилированных файлов
        "outFile": "main.js"//название выходного файла
    },
    // "files":[//файлы которые должны компилироваться, если не указать то будут все
    //     "app.ts"
    // ],
    "exclude":[//исключаем файлы, игнорируется если есть "files"
        "wwwroot",
        "node_modules"
    ]
}